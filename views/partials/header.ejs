<!DOCTYPE html>
<html lang="fr">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title><%= title || 'E-Sport Tournaments' %></title>
  <link rel="stylesheet" href="/style.css" />
</head>
<body>
  <div class="container">
    <header>
      <div class="header-content">
        <div class="logo">
          <span class="logo-icon">üéÆ</span>
          <span>E-Sport Tournaments</span>
        </div>
        <nav>
          <a href="/" class="nav-link <%= page === 'home' ? 'active' : '' %>">Accueil</a>
          <a href="/tournois" class="nav-link <%= page === 'tournaments' ? 'active' : '' %>">Tournois</a>
          <a href="/equipes" class="nav-link <%= page === 'teams' ? 'active' : '' %>">√âquipes</a>
          <a href="#" id="auth-link" class="nav-link" onclick="goToAuth(event)">Connexion</a>
        </nav>
      </div>
    </header>

    <main class="main-content">

    <script>
      function goToAuth(event) {
        event.preventDefault();
        const token = localStorage.getItem('token');
        if (token) {
          window.location.href = '/profil';
        } else {
          window.location.href = '/connexion';
        }
      }

      function updateAuthLink() {
        const token = localStorage.getItem('token');
        const authLink = document.getElementById('auth-link');
        const currentPage = '<%= page %>';
        
        if (token) {
          authLink.textContent = 'üë§ Profil';
          authLink.classList.toggle('active', currentPage === 'profile');
        } else {
          authLink.textContent = 'üîê Connexion';
          authLink.classList.toggle('active', currentPage === 'auth');
        }
      }

      // Update on page load
      updateAuthLink();

      // Listen for storage changes (logout from another tab)
      window.addEventListener('storage', updateAuthLink);
    </script>
